<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/allmap"
    tools:context=".ConfirmMap">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/persononmap"
        android:layout_marginStart="250dp"
        android:layout_marginTop="200dp">

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="118dp"
        android:layout_marginTop="230dp"
        android:src="@drawable/vector5">

    </ImageView>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="98.5dp"
        android:layout_marginTop="190dp"
        android:src="@drawable/ic_baseline_location_on_24">

    </ImageView>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_outline_lens_24"
        android:layout_marginTop="214dp"
        android:layout_marginStart="108dp">

    </ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="#FE724C"
        android:layout_alignParentBottom="true">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#FE724C"
        app:cardCornerRadius="100px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery place"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:layout_marginStart="215dp"
            android:layout_marginTop="23dp">

        </TextView>


        <LinearLayout
            android:id="@+id/Distancelin"
            android:layout_width="366dp"
            android:layout_height="109dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:text="15"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"
                android:text="Km"
                android:textColor="@color/white">

            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/linev">

            </ImageView>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="6391 Elgin St. Celina, Delaware 10299"
                android:textColor="@color/white">

            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/confirm_map_button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="Submit"
        android:textColor="#FE724C"
        android:textSize="16dp"
        android:backgroundTint="@color/white"
        app:cornerRadius="100px">

    </Button>

</RelativeLayout>