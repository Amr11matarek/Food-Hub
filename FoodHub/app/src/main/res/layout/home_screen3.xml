<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home_screen3"
    style="@style/Screen">

    <androidx.cardview.widget.CardView
        android:id="@+id/Home_Screen3_Card"
        android:layout_width="323dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        app:cardCornerRadius="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="365dp"
            android:layout_height="188dp">

            <ImageView
                android:id="@+id/Home_Screen3_Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/features">

            </ImageView>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Home_Screen3_Name"
        style="@style/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Home_Screen3_Card"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        android:text="Ground Beef Tacos"
        android:textSize="35dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/Home_Screen3_Price"
        style="@style/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Home_Screen3_Name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        android:text="9.50"
        android:textSize="35dp"
        android:textStyle="bold">

    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/Home_Screen3_Price"
        android:layout_below="@+id/Home_Screen3_Name"
        android:layout_marginTop="21dp"
        android:layout_marginStart="165dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dec2Button"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:drawableBottom="@drawable/ic_baseline_remove"
            app:cornerRadius="100px">

        </Button>

        <TextView
            android:id="@+id/inc_dec2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="0">

        </TextView>

        <Button
            android:id="@+id/inc2Button"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:backgroundTint="#FE724C"
            android:drawableBottom="@drawable/ic_baseline_add"
            android:layout_marginStart="10dp"
            app:cornerRadius="100px">

        </Button>

    </LinearLayout>

    <TextView
        android:id="@+id/Home_Screen3_Desc"
        style="@style/Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Home_Screen3_Price"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        android:text="Brown the beef better.Lean ground beef – I like to use 85% lean angus.Garlic – use fresh chopped.Spices – chili powder, cumin, onion powder."
        android:textStyle="bold">

    </TextView>

    <Button
        android:id="@+id/addtocart2"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#FE724C"
        android:drawableLeft="@drawable/ic_baseline_add_cart"
        android:text="Add to cart "
        app:cornerRadius="100px">

    </Button>

</RelativeLayout>