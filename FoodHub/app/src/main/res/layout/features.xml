<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    style="@style/Screen">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="255dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="365dp"
            android:layout_height="188dp">

            <ImageView
                android:id="@+id/featureimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/features">

            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/featuretxt"
            style="@style/Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="195dp"
            android:text="McDonaldâ€™s"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/featuredelivary"
            style="@style/Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="215dp"
            android:drawableLeft="@drawable/delivary"
            android:text=" free delivery">

        </TextView>

        <TextView
            android:id="@+id/featuretime"
            style="@style/Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginTop="215dp"
            android:drawableLeft="@drawable/time"
            android:text=" 10-15 mins">

        </TextView>


    </androidx.cardview.widget.CardView>

</RelativeLayout>